%h2.class.prepend-top= @project.title

%p!= @project.description

%section.project-status
  %div#status.span6
    %p=@project.valid_until
%dl
  %dt User
  %dd= @project.user.name
  %dt Location
  %dd= @project.address
  %dt Amount
  %dd= @project.amount
  %dt Valid until
  %dd= @project.valid_until

%p= link_to("Edit project", :edit_project)
%p= link_to("Back this project", :back_project, :confirm => "Do you really want to back this project with 100 Euro?")
%p= link_to("Go back to project list", :projects)
